<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.itvhub" name="ITV hub" version="0.7.0" provider-name="Dimitri Kroon">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="inputstream.adaptive" version="19.0.5"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.pytz"/>
    <import addon="script.module.tzlocal"/>
    <import addon="script.module.codequick"/>
    <import addon="script.module.inputstreamhelper"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Live TV and catchup from itvX</summary>
    <description>Play live and catchup TV from itvX. An ITV account is required.</description>
    <disclaimer lang="en">This add-on is not developed by ITV and is no way affiliated with, or endorsed by ITV.
    </disclaimer>
    <assets>
      <icon>resources/xicon.png</icon>
      <fanart>resources/fanart.png</fanart>
    </assets>
    <reuselanguageinvoker>true</reuselanguageinvoker>
  </extension>
</addon>
